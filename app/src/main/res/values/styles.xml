<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeekBar">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:progressDrawable">@drawable/progressbar_bg</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <!-- 自定义view CustomTitleView -->
    <!--<declare-styleable name="CustomTitleView">-->
    <!--<attr name="titleText" format="string" />-->
    <!--<attr name="titleTextColor" format="color" />-->
    <!--<attr name="titleTextSize" format="dimension" />-->
    <!--</declare-styleable>-->

    <declare-styleable name="CustomTitleView2">
        <attr name="titleText" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="image" format="reference" />
        <attr name="imageScaleType" format="integer">
            <enum name="fillXY" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" format="color" />
        <attr name="secondColor" format="color" />
        <attr name="cicleWidth" format="dimension" />
        <attr name="speed" format="integer" />
    </declare-styleable>

    <!-- 自定义flowLayout -->
    <style name="text_flat_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- 自定义loadingView 9.16 -->
    <declare-styleable name="ProgressView">
        <attr name="bgWidth" format="dimension" />
        <attr name="bgColor" format="color" />
        <attr name="bgCornerRadius" format="dimension" />
        <attr name="innerRadius" format="dimension" />
        <attr name="innerColor" format="color" />
        <attr name="edgeColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="ringColor" format="color" />
        <attr name="percentColor" format="color" />
        <attr name="percentSize" format="dimension" />
    </declare-styleable>

</resources>
